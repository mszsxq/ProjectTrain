<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:text="猫咪的尾巴和身体不是一个整体"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/detail_touxiang"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView"
        android:src="@drawable/cat"
        app:qmui_corner_radius="100dp"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:alpha="0.8"
        android:drawableStart="@drawable/yongh"
        android:drawablePadding="4dp"
        android:text="发布人"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"

        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/detail_touxiang" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:drawableStart="@mipmap/icon_tour_label"
        android:drawablePadding="4dp"
        android:text="英短"
        android:layout_marginBottom="5dp"
        android:textColor="@color/gray"
        android:textSize="13sp"
        android:layout_below="@+id/detail_touxiang" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:alpha="0.8"
        android:layout_marginTop="5dp"
        android:drawableStart="@mipmap/icon_tour_label"
        android:drawablePadding="4dp"
        android:text="寻找贴"
        android:layout_marginBottom="5dp"
        android:textColor="@color/gray"
        android:textSize="13sp"
        android:layout_below="@+id/detail_touxiang"
        android:layout_toRightOf="@+id/textView3"
        />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:alpha="0.8"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawableStart="@mipmap/icon_tour_location"
        android:drawablePadding="4dp"
        android:text="河北师范大学"
        android:textColor="@color/gray"
        android:textSize="13sp"
        android:layout_below="@+id/detail_touxiang"
        android:layout_toRightOf="@+id/textView4"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/background" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="寻找贴详情"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_below="@id/textView3" />

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/imageView1"
        android:layout_width="380dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:qmui_corner_radius="15dp"
        android:src="@mipmap/b1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="几乎所有人都被小莎养猫这件事儿惊着了。很多朋友劝我：赶紧送人！
是他们讨厌猫？还是觉得小莎不配养猫？他们眼里的我到底是怎样一个工作狂或者男人婆？
凡是劝我不要养猫的人肯定不够了解我。
从小跟猫们一起长大，觉得自己像一只猫多过一个人，我的理想就是做一个猫一样的女人。"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_below="@+id/imageView1"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:background="@color/background" />
</RelativeLayout>