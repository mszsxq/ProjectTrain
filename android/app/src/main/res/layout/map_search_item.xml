<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ms_item_relayout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:layout_alignParentTop="true"
        android:id="@+id/ms_item_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:qmui_corner_radius="10dp"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/ms_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ms_item_iv"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="#类型+内容“大萨达撒大萨达啊阿萨德”"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="14dp" />

    <RelativeLayout
        android:id="@+id/tn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ms_item_content"
        android:layout_marginTop="5dp">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/ms_touxiang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/cat"
            app:qmui_corner_radius="100dp"

            />

        <TextView
            android:text="昵称"
            android:id="@+id/ms_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/ms_touxiang"
            android:textColor="#6E6E6E"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/ms_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="石家庄"
            android:textColor="#6E6E6E"
            android:textSize="13dp" />
    </RelativeLayout>
</RelativeLayout>